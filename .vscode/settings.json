{
    "python.pythonPath": ".python_env/bin/python",
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "files.watcherExclude": {
        ".python_env/**": true,
        ".idea/**": true,
        "**/.mypy_cache": true,
        "**/__pycache__": true
    },
    "files.exclude": {
        ".python_env": true,
        ".idea": true,
        ".vscode": true,
        "**/.mypy_cache": true,
        "**/__pycache__": true
    },
    "python.linting.enabled": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true
}
